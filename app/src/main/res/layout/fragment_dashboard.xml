<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">

    <!-- TextView for Average Calories -->
    <TextView
        android:id="@+id/average_calories_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Calories"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- TextView for Minimum Calories -->
    <TextView
        android:id="@+id/minimum_calories_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minimum Calories"
        android:layout_below="@id/average_calories_textview"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- TextView for Maximum Calories -->
    <TextView
        android:id="@+id/maximum_calories_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maximum Calories"
        android:layout_below="@id/minimum_calories_textview"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- TextView to display average calories -->
    <TextView
        android:id="@+id/average_calories_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="572"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/average_calories_textview"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- TextView to display minimum calories -->
    <TextView
        android:id="@+id/minimum_calories_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80"
        android:layout_below="@id/average_calories_value_textview"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/minimum_calories_textview"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- TextView to display maximum calories -->
    <TextView
        android:id="@+id/maximum_calories_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1300"
        android:layout_below="@id/minimum_calories_value_textview"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/maximum_calories_textview"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/clear_data_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Data"
        android:layout_alignParentRight="true"
        android:layout_below="@id/maximum_calories_textview"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"/>


</RelativeLayout>